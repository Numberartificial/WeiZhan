<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ac_image_cover"
	android:layout_width="fill_parent"
    android:layout_height="wrap_content"
	android:paddingLeft="16dp"	
    android:paddingRight="16dp"  
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="@drawable/bg_cover"
    android:orientation="vertical">

			<LinearLayout 
				android:id="@+id/list_view_search"
			    android:layout_width="fill_parent"
			    android:layout_height="wrap_content"
			    android:background="#f5f5f5"
			    android:orientation="vertical">
					<EditText  
				    android:id="@+id/list_edit_search"    
				    android:layout_width="fill_parent"  
				    android:background="@drawable/edit_search" 
				    android:layout_height="42dip" 	
				    android:hint="@string/ac_edit_search"
				    android:textColor="#000000"
				    android:textSize="14sp"
				    android:textColorHint="#c8c8c8"/>  
			 </LinearLayout>
		    <LinearLayout 
			android:id="@+id/list_tags"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:paddingTop="6dp"
		    android:layout_marginTop="12dp"
		    android:paddingLeft="6dp"
		    android:paddingRight="6dp" 
		    android:paddingBottom="6dp"
		    android:orientation="horizontal">
		   
		    <com.custom.vg.list.CustomListView 
		       android:id="@+id/list_sexangleView"
		       android:layout_width="fill_parent"
		       android:layout_height="wrap_content"/>
		
			</LinearLayout>
</LinearLayout>